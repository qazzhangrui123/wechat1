<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".set.CurrencySet">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_finish"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="通用"
            android:textSize="20dp" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:padding="@dimen/friend_info_linear_padding">

            <TextView
                android:id="@+id/privacy_set_empower_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="语言设置"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#EEE"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/friend_info_margin_top_2"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/friend_info_linear_padding">

                <TextView
                    android:id="@+id/user_set_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="字体大小"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/friend_info_margin_top_2"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/friend_info_linear_padding">

                <TextView
                    android:id="@+id/user_set_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="聊天背景"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/friend_info_margin_top_2"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/friend_info_linear_padding">

                <TextView
                    android:id="@+id/user_set_currency1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="表情管理"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/friend_info_margin_top_2"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/friend_info_linear_padding">

                <TextView
                    android:id="@+id/user_set_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图片、视频和文件"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/friend_info_margin_top_10"
            android:background="@drawable/ripple_bg"
            android:orientation="horizontal"
            android:padding="@dimen/friend_info_linear_padding">

            <TextView
                android:id="@+id/user_set_currency2"
                android:layout_width="264dp"
                android:layout_height="40dp"
                android:text="听筒模式"
                android:textSize="18sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button1"
                android:layout_width="76dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/friend_info_margin_top_10"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="@dimen/friend_info_linear_padding">

            <TextView
                android:id="@+id/user_set_currency3"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:text="聊天记录备份与迁移"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_set_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="清除聊天记录"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>